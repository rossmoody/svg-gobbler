{
  "manifest_version": 2,
  "name": "SVG Gobbler",
  "version": "3.3",
  "description": "Download and optimize icons, logos, and vector SVGs from websites.",
  "homepage_url": "https://github.com/rossmoody/svg-gobbler",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "SVG Gobbler"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs"],
  "content_security_policy": "script-src 'self' https://feedback.fish/ff.js; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["./dist/find.js"]
    }
  ]
}
